pipeline {
  environment {
    registry = 'mstarin1010/project-1'
    registryCredential = 'docker'
    dockerImage = ''
  }
  agent any
  tools {nodejs '<nodeversionfromjenkins>' }
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/mstarin1010/project-1.git'
      }
    }
    stage('Build') {
       steps {
         sh 'npm install'
         sh 'npm run bowerInstall'
       }
    }
    stage('Test') {
      steps {
        sh 'npm test'
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }
  }
}
